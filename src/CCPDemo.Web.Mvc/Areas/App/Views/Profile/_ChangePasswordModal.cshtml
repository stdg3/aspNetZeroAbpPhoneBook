@using CCPDemo.Web.Areas.App.Models.Common.Modals
@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("ChangePassword")))

<div class="modal-body">
    <form name="ChangePasswordModalForm" class="form">
        <div class="mb-5">
            <label for="CurrentPassword" class="form-label">@L("CurrentPassword")</label>
            <input id="CurrentPassword" type="password" autocomplete="new-password" name="CurrentPassword" class="form-control" required maxlength="@CCPDemo.Authorization.Users.User.MaxPlainPasswordLength">
            <span class="form-text text-muted">@Html.Raw(L("PasswordChangeDontRememberMessage", "<a href=\"" + Url.Action("ForgotPassword", "Account", new {area = ""}) + "\">" + L("ClickHere") + "</a>"))</span>
        </div>
        <div class="mb-5">
            <label for="NewPassword" class="form-label">@L("NewPassword")</label>
            <input id="NewPassword" type="password" autocomplete="new-password" name="NewPassword" class="form-control" required>
        </div>
        <div class="mb-5">
            <label for="NewPasswordRepeat" class="form-label">@L("NewPasswordRepeat")</label>
            <input id="NewPasswordRepeat" type="password" autocomplete="new-password" name="NewPasswordRepeat" class="form-control" required equalto="#NewPassword">
        </div>
    </form>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
