@model CCPDemo.Web.Areas.App.Models.Layout.LanguageSwitchViewModel
@if (Model.Languages.Count > 1)
{
    <div class="d-flex align-items-center dropdown-language" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-start">
        <div class="@Model.CssClass">
            <i class="@Model.CurrentLanguage.Icon" aria-label="@Model.CurrentLanguage.Icon"></i>
        </div>
    </div>
    <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-bold fs-7 w-200px py-4"
         data-kt-menu="true">
        @foreach (var languageInfo in Model.Languages.Where(language => language.Name != Model.CurrentLanguage.Name))
        {
            <div class="menu-item px-3">
                <a href="@Url.Action("ChangeCulture", "AbpLocalization", new {
                             area = "", 
                             cultureName = languageInfo.Name, 
                             returnUrl = Context.Request.Path + Context.Request.QueryString
                         })" class="menu-link px-3">
                    <span class="symbol symbol-20px me-4">
                        <i class="@languageInfo.Icon"></i>
                    </span>
                    @languageInfo.DisplayName
                </a>
            </div>
        }
    </div>
}
