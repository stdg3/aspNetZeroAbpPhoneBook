@using Abp.Extensions
@using CCPDemo.Web.Areas.App.Models.Common.Modals
@using CCPDemo.Web.Areas.App.Models.Languages
@model EditTextModalViewModel

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(@L("EditText")))

<div class="modal-body">
    <form name="EditLanguageTextForm" role="form" novalidate class="form-validation">

        <input type="hidden" name="SourceName" value="@Model.SourceName" />
        <input type="hidden" name="LanguageName" value="@Model.TargetLanguage.Name" />
        <input type="hidden" name="Key" value="@Model.Key" />

        <div class="mb-5">
            <label for="BaseLanguageDisplayName" class="form-label"><i class="@Model.BaseLanguage.Icon"></i> @Model.BaseLanguage.DisplayName </label>
            <textarea id="BaseLanguageDisplayName" readonly class="form-control edited" rows="4">@Model.BaseText</textarea>
        </div>

        <div class="mb-5">
            <label for="TargetLanguageDisplayName" class="form-label"><i class="@Model.TargetLanguage.Icon"></i> @Model.TargetLanguage.DisplayName </label>
            <textarea id="TargetLanguageDisplayName" name="Value" auto-focus class="form-control @(Model.TargetText.IsNullOrEmpty() ? "" : "edited")" rows="4">@Model.TargetText</textarea>
        </div>

    </form>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
